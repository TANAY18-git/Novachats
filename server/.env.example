# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# Note: If your password contains special characters like @, encode them (@ = %40)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/novachats

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Chat Link Settings
CHAT_LINK_EXPIRY_MINUTES=60

# Cloudinary Configuration (optional - for profile pictures)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
